{
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "class-name": true,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field", 
                    "instance-field", 
                    "constructor",
                    "private-instance-method",
                    "protected-instance-method",
                    "public-instance-method"
                ]
            }
        ],
        "no-trailing-whitespace": [
            true,
            "ignore-template-strings"
        ],
        "only-arrow-functions": [
            true,
            "allow-named-functions"
        ],
        "no-var-keyword": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "no-consecutive-blank-lines": true,
        "linebreak-style": [
            true,
            "LF"
        ],
        "jsdoc-format": true,
        "trailing-comma": [
            true
        ]
    }
}